<%= form_with model: @customer, url: customers_path do |f| %>
  <label>氏名</label>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %></br>
  <label>フリガナ</label>
  <%= f.text_field :last_name_kana%>
  <%= f.text_field :first_name_kana %></br>
  <label>郵便番号</label>
  <%= f.text_field :postal_code %></br>
  <label>住所</label>
  <%= f.text_area :address %></br>
  <label>電話番号</label>
  <%= f.text_field :phone_number %></br>
  <label>メールアドレス</label>
  <%= f.text_field :email %></br>
  <div>
    <%= f.submit "編集内容の保存" %>
    <%= link_to "退会する",  customers_confirmation_path %>
  </div>

<% end %>