 <div class="container">
  <div class = "row">
   <div class="col-md-3">
    <table>
     <thead>
       <tr>
         <th >ジャンル検索</th>
       </tr>
     </thead>

     <tbody>
       <% @genres.each do |genre| %>
         <tr>
           <td>
             <%= link_to items_path(genre_id: genre.id) do %>
               <%= genre.name %>
             <% end %>
           </td>
         </tr>
       <% end %>
     </tbody>
    </table>
   </div>
   <h1>商品一覧</h1>

   <% @items.each do |item| %>
   <div><%= image_tag item.get_item_image(100,100) %></div>
    <%= link_to item_path(item.id),class: 'text-light' do %>
     <div><%= item.name %></div>
    <% end %>
    <div><%= item.price %></div>
   <% end %>
  </div>
 </div>