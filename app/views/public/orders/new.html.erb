<h1>注文情報入力</h1>
<h2>支払方法</h2>
<%= form_with model: @order, url: orders_confirmation_path do |f| %>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h2>お届け先</h2>

<%= f.radio_button :address_option,0%>
<label>ご自身の住所</label></br>
<%= f.label :address, current_customer.residence%></br>

<%= f.radio_button :address_option,1 %>
<label>登録済み住所</label></br>
<%= f.select :address_id, options_from_collection_for_select(@address, :id, :address_display) %></br>

<%= f.radio_button :address_option,2%>
<label>新規住所</label></br>
<label>郵便番号(ハイフンなし)</label>
<%= f.text_field :postal_code %></br>
<label>住所</label>
<%= f.text_field :address %></br>
<label>宛名</label>
<%= f.text_field :name %></br>

<%= f.submit '確認画面へ進む' %>
<% end %>

